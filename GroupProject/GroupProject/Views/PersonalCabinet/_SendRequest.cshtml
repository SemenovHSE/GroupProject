@using GroupProject.Models
@model SendRequestModel

<div>
    <div class="form-group col-md-4">
        <div class="form-group">
            @Html.LabelFor(r => r.Theme)
            @Html.TextBoxFor(r => r.Theme, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(r => r.Body)
            @Html.TextAreaFor(r => r.Body, new { @class = "form-control", rows = "5" })
        </div>
        <div class="form-group">
            @Html.LabelFor(r => r.Files)
            <input type="file" id="Files" class="form-control" multiple />
        </div>
        <button id="SendRequest" class="btn btn-primary btn-lg center-block">Подать заявку</button>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function() {
        $("#SendRequest").on("click",
            function() {
                var formData = new FormData();
                formData.append("Theme", $("#Theme").val());
                formData.append("Body", $("#Body").val());
                var files = $("#Files").prop("files");
                for (let i = 0; i < files.length; i++) {
                    formData.append("Files[" + i + "]", files[i]);
                }
                $.ajax({
                    url: "@Url.Action("SendRequest")",
                    type: "POST",
                    dataType: "json",
                    contentType: false,
                    processData: false,
                    data: formData,
                    success: function(data) {
                        if (data.result) {
                            alert("Спасибо! Ваша заявка будет рассмотрена в ближайшее время!");
                            $("#ShowResidentRequests").click();
                        }
                        else {
                            alert("Произошла ошибка при отправке запроса");
                        }
                    }
                });
            });
    });
</script>
