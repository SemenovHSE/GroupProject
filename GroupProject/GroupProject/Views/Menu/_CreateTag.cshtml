@using GroupProject.Models
@model CreateTagModel

<div id="TagContent" class="col-md-4 col-md-offset-4">
    <div class="row">
        <div class="form-group">
            @Html.LabelFor(t => t.Name, new { @class = "control-label" })
            @Html.TextBoxFor(t => t.Name, new { @class = "form-control" })
        </div>
    </div>
    <div class="row">
        <button id="CreateTag" class="btn btn-primary center-block">Добавить тег</button>
    </div>
    <br />
    <div class="row">
        <button id="BackToTags" class="btn btn-info btn-sm center-block">Отмена</button>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function() {
        $("#CreateTag").on("click",
            function() {
                var formData = new FormData();
                formData.append("Name", $("#Name").val());
                $.ajax({
                    url: "@Url.Action("CreateTag")",
                    type: "POST",
                    dataType: "json",
                    contentType: false,
                    processData: false,
                    data: formData,
                    success: function(data) {
                        if (data.result) {
                            alert("Тег успешно создан!");
                            location.reload();
                        }
                        else {
                            alert("Во время создания тега произошла ошибка");
                        }
                    }
                });
            });

        $("#BackToTags").on("click",
            function() {
                $("#ContentWrapper #TagContent").remove();
                $("#TagsContent").show();
            });
    });
</script>